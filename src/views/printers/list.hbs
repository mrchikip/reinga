<div class="container p-4 text-center">
  <div class="row">
    <div class="container p-4">
      <div class="row">
        <div class="form-group-search">
            <form action="/printers/search" method="POST">
              <input type="text" class="form-control form-control-lg" id="busqueda" name="busqueda" placeholder="Introduce tu busqueda" />
              <button type="submit" class="btn btn-primary btn-lg gap-2 col-10 mx-auto">Buscar</button>
            </form>
        </div>

        <div class="form-group-newreg">
          <a href="/printers/add" class="btn btn-success btn-lg gap-2 col-10 mx-auto">Nuevo Registro</a>
        </div>

        {{#each printer}}
        <div class="col-md-3">
          <div class="card text-center">
            <div class="card-body">
              <h3 class="card-title text-uppercase">
                S/N:
                {{serial}}
              </h3>
              <p>CATEGORIA DE EQUIPO: {{type}}</p>
              <p>FABRICANTE: {{marca}}</p>
              <p>MODELO: {{modelo}}</p>
              <p>UBICACION: {{ubicacion}}</p>
              <p></p>
              <p>PROPIEDAD: {{propiety}}</p>
              <p>ESTADO DEL EQUIPO: {{estado}}</p>
              <a href="/printers/delete/{{serial}}" class="btn btn-danger">Eliminar</a>
              <a href="/printers/edit/{{serial}}" class="btn btn-secondary">Editar</a>
            </div>
          </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
          <div class="card card-body text-center">
            <p>No hay registros</p>
            <a href="/printers/add">Crear Uno</a>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
</div>