<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form id="hardware-form" action="/printers/add" method="post">

            <div class="form-group">
              <input
                type="text"
                class="form-control"
                name="serial"
                placeholder="Serial Del Equipo"
                autofocus
              />
            </div>

            <div class="input-group mb-3">
              <label class="input-group-text" for="categoria">Categoria de
                Equipo</label>
              <select class="form-select" id="type" name="type">
                <option value="Impresora">Impresora</option>
                <option value="Multifuncional">Multifuncional</option>
                <option value="Etiquetas">Etiquetas</option>
                <option value="Plotter">Plotter</option>
              </select>
            </div>

            <div class="input-group mb-3">
              <label class="input-group-text" for="marca">Marca / Fabricante</label>
              <select class="form-select" id="marca" name="marca">
                <option value="HP">HP</option>
                <option value="EPSON">EPSON</option>
                <option value="Ricoh">Ricoh</option>
                <option value="Zebra">Zebra</option>
                <option value="Avery Dennison">Avery Dennison</option>
              </select>
            </div>

            <div class="form-group">
              <input
                type="text"
                id="modelo"
                class="form-control"
                name="Modelo"
                placeholder="Modelo De Equipo"
              />
            </div>

            <div class="input-group mb-3">
              <label class="input-group-text" for="ubicacion">Ubicacion del
                Equipo</label>
              <select class="form-select" id="ubicacion" name="ubicacion">
                <option value="Planta Metalmecanica">Planta Metalmecanica</option>
                <option value="Planta Seki">Planta Seki</option>
                <option value="Sofasa">Sofasa</option>
                <option value="Archivada">Archivada</option>
              </select>
            </div>

            <div class="input-group mb-3">
              <label class="input-group-text" for="propiety">Propiedad del
                Equipo</label>
              <select class="form-select" id="propiety" name="propiety">
                <option value="UMO">UMO</option>
                <option value="IMDUCOP">IMDUCOP</option>
                <option value="CONIX">CONIX</option>
                <option value="OTRO">OTRO</option>
              </select>
            </div>

            <div class="input-group mb-3">
              <label class="input-group-text" for="estado">Estado de la
                Impresora</label>
              <select class="form-select" id="estado" name="estado">
                <option value="Nuevo">Nuevo</option>
                <option value="Excelente">Excelente</option>
                <option value="Bueno">Bueno</option>
                <option value="Aceptable">Aceptable</option>
                <option value="Revisar">Revisar o Reparar</option>
                <option value="Baja">Dar de Baja</option>
              </select>
            </div>

            <button type="submit" class="btn btn-success">Guardar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>.form-group { margin-bottom: 10px; display: flex; justify-content:
  center; align-items: center; }
</style>